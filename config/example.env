# Example environment variables (copy values into PowerShell env vars or your own .env)
# Postgres
PGHOST=127.0.0.1
PGPORT=5433
PGUSER=postgres
PGDATABASE=ragdb
# PGPASSWORD=your_password

# Ollama models
EMBED_MODEL=bge-m3
CHAT_MODEL=gemma3:4b
AUDIT_MODEL=gemma3:4b

# RAG behavior
DEFAULT_COLLECTION=public
MAX_SENSITIVITY=0
TOP_K=5
RELEVANCE_MAX_DISTANCE=0.25

# Optional "who is the user" for ACLs (local now, AD later)
PRINCIPAL=local_admin